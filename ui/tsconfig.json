{
  "compilerOptions": {
    "target": "es5",
    "mode": "modules",
    "sourceMap": true,
    "theme": "default",
    "module": "commonjs",
    "noImplicitAny": true,
    "stripInternal": true,
    "removeComments": false,
    "moduleResolution": "node",
    "preserveConstEnums": true,
    "ignoreCompilerErrors": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "suppressExcessPropertyErrors": true,
    "suppressImplicitAnyIndexErrors": true,
    "noEmit": true,
    "inlineSources": true
  },
  "compileOnSave": false,
  "buildOnSave": false,
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "./node_modules/*",
    "**/*.spec.ts",
    "**/*-aot.ts"
  ]
}
